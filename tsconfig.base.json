{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Module resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true,

    // Output
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],

    // Path mapping (define in root or individual packages)
    "baseUrl": ".",
    "paths": {}
  },
  "exclude": ["**/dist", "**/build", "**/node_modules", "**/*.stories.*"]
}
